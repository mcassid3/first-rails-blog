<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter, size: 25 %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body, cols: "80", rows: "10" %>
  </p>
  <p>
    <%= f.submit 'Comment', class: 'btn-primary' %>
  </p>
<% end %>