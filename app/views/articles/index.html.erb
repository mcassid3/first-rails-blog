<h1 class="header"> EuroTrip - Italy and Sweden </h1>
<h3 class="subtitle">July 2nd - 9th, 2016</h3>
<button class="btn-primary" id="new-article"><%= link_to 'New article', new_article_path %></button>
 
<div id ='index-table'>
  <table>
    <tr>
      <th>Title</th>
      <th>Text</th>
    </tr>
   
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td id="article-text"><%= article.text %></td>
        <td><%= link_to 'Show', article_path(article) %>
        <%= link_to 'Edit', edit_article_path(article) %>
        <%= link_to 'Delete', article_path(article), 
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>
</div>